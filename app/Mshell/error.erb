<div data-role="dialog" id="mshell-error-page" data-add-back-btn="false" data-theme="g">
    <div data-role="header" data-theme="g">
        <h1><%= Locale::Mc[:title_error] %></h1> 
    </div>

    <div data-role="content" data-theme="g">
        <div class="listContainer">
            <div class="listContainerInner">
                <% if (@params['error_message']) %>
                    <div id="error-message">
                        <%=@params['error_message']%>
                    </div>
                <%end%>

                <div>
                    <% url = @params['destination_url'] ? @params['destination_url'] : url_for( :controller => :Mshell, :action => :show ) %>
                    <a href="<%= url %>" data-role="button" data-inline="true" data-transition="pop" data-direction="reverse" data-theme="g"><%= Locale::Mc[:label_close] %></a>
                </div>
            </div>
        </div>
    </div>
</div>